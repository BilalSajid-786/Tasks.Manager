@model IEnumerable<TeamViewModel>
@{
    ViewBag.Title = "Teams";
}

<div class="row mt-5">
    <div class="col-md-12">
        <a class="btn btn-success" asp-action="Add" asp-controller="Teams">Add New Team</a>
    </div>

    <div class="col-md-12">
        <div class="table-responsive mt-5">
            <table class="table table-bordered table-hover shadow-sm">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Team</th>
                        <th>Created By</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TeamId</td>
                            <td>@item.Name</td>
                            <td>@item.CreatedBy</td>
                            <td>
                                <!-- Edit icon -->
                                <a title="Edit" class="text-primary me-2" asp-action="Edit" asp-controller="Teams" 
                                asp-area="Teams" asp-route-teamId="@item.TeamId">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <!-- Delete icon -->
                                <a title="Delete" class="text-danger" asp-action="Delete" asp-controller="Teams"
                                   asp-area="Teams" asp-route-teamId="@item.TeamId">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
