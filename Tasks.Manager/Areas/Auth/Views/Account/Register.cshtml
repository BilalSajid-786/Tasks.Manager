@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}


    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="container p-4 border rounded shadow" style="max-width: 700px; width: 100%;">
        <h2 class="text-center mb-4">Register Your Account</h2>
            <form method="post" asp-action="Register" asp-controller="Account">
                <div class="form-group">
                    <label asp-for="Email">Email address</label>
                    <input class="form-control" placeholder="Enter email" asp-for="Email">
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" placeholder="Enter name" asp-for="Name">
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Password">Password</label>
                    <input class="form-control" placeholder="Enter password" asp-for="Password">
                </div>
                <div class="form-group mt-2">
                    <label asp-for="RoleId">Role</label>
                    <select class="form-select" asp-for="RoleId" asp-items="@ViewBag.RolesList"></select>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
