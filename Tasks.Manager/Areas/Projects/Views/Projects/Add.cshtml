@model AddProjectViewModel
@{
    ViewBag.Title = "Add Project";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container p-4 border rounded shadow" style="max-width: 700px; width: 100%;">
        <h2 class="text-center mb-4">Add Project</h2>
        <form method="post" asp-action="Add" asp-controller="Projects" asp-area="Projects">
            <div class="form-group mt-2">
                <label asp-for="Name">Project Name</label>
                <input class="form-control" placeholder="Enter project name" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description">Description</label>
                <input class="form-control" placeholder="Enter discription" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TeamId">Select Team</label>
                <select class="form-select" asp-for="TeamId" asp-items="@ViewBag.TeamsList"></select>
            </div>
            <button type="submit" class="btn btn-success mt-4">Add Project</button>
        </form>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}